{
  "designSystem": {
    "name": "StackSense Light Professional",
    "version": "2.0.0",
    "description": "Modern light-themed design system for professional monitoring applications",
    "theme": "light",
    "created": "2025-12-10",
    "author": "StackSense Design Team"
  },

  "colorPalette": {
    "primary": {
      "50": "#f0f9ff",
      "100": "#e0f2fe",
      "500": "#0ea5e9",
      "600": "#0284c7",
      "700": "#0369a1",
      "900": "#0c4a6e"
    },
    "secondary": {
      "50": "#f8fafc",
      "100": "#f1f5f9",
      "200": "#e2e8f0",
      "500": "#64748b",
      "600": "#475569",
      "700": "#334155",
      "900": "#0f172a"
    },
    "success": {
      "50": "#f0fdf4",
      "100": "#dcfce7",
      "500": "#22c55e",
      "600": "#16a34a",
      "700": "#15803d"
    },
    "warning": {
      "50": "#fffbeb",
      "100": "#fef3c7",
      "500": "#f59e0b",
      "600": "#d97706",
      "700": "#b45309"
    },
    "danger": {
      "50": "#fef2f2",
      "100": "#fee2e2",
      "500": "#ef4444",
      "600": "#dc2626",
      "700": "#b91c1c"
    },
    "neutral": {
      "white": "#ffffff",
      "gray": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0em",
      "wide": "0.025em"
    }
  },

  "spacing": {
    "scale": "0.25rem",
    "values": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "outline": "0 0 0 3px rgba(59, 130, 246, 0.1)"
  },

  "components": {
    "buttons": {
      "primary": {
        "background": "primary.500",
        "color": "neutral.white",
        "hover": {
          "background": "primary.600"
        },
        "padding": "spacing.3 spacing.6",
        "borderRadius": "borderRadius.md",
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium"
      },
      "secondary": {
        "background": "neutral.white",
        "color": "secondary.700",
        "border": "1px solid secondary.300",
        "hover": {
          "background": "secondary.50"
        }
      },
      "outline": {
        "background": "transparent",
        "color": "primary.600",
        "border": "1px solid primary.300",
        "hover": {
          "background": "primary.50"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "secondary.600",
        "hover": {
          "background": "secondary.100"
        }
      }
    },

    "cards": {
      "base": {
        "background": "neutral.white",
        "border": "1px solid secondary.200",
        "borderRadius": "borderRadius.lg",
        "boxShadow": "shadows.sm",
        "padding": "spacing.6"
      },
      "elevated": {
        "boxShadow": "shadows.lg"
      },
      "bordered": {
        "border": "2px solid secondary.300"
      }
    },

    "inputs": {
      "base": {
        "background": "neutral.white",
        "border": "1px solid secondary.300",
        "borderRadius": "borderRadius.md",
        "padding": "spacing.3 spacing.4",
        "fontSize": "typography.fontSize.sm",
        "color": "secondary.900",
        "focus": {
          "borderColor": "primary.500",
          "boxShadow": "shadows.outline"
        }
      }
    },

    "navigation": {
      "sidebar": {
        "width": "280px",
        "background": "neutral.white",
        "borderRight": "1px solid secondary.200",
        "boxShadow": "shadows.md"
      },
      "navItem": {
        "padding": "spacing.3 spacing.4",
        "color": "secondary.600",
        "hover": {
          "background": "secondary.50",
          "color": "secondary.900"
        },
        "active": {
          "background": "primary.50",
          "color": "primary.700",
          "borderLeft": "3px solid primary.500"
        }
      }
    },

    "status": {
      "online": {
        "background": "success.100",
        "color": "success.700",
        "border": "1px solid success.200"
      },
      "warning": {
        "background": "warning.100",
        "color": "warning.700",
        "border": "1px solid warning.200"
      },
      "offline": {
        "background": "danger.100",
        "color": "danger.700",
        "border": "1px solid danger.200"
      }
    },

    "alerts": {
      "success": {
        "background": "success.50",
        "color": "success.800",
        "border": "1px solid success.200"
      },
      "warning": {
        "background": "warning.50",
        "color": "warning.800",
        "border": "1px solid warning.200"
      },
      "error": {
        "background": "danger.50",
        "color": "danger.800",
        "border": "1px solid danger.200"
      },
      "info": {
        "background": "primary.50",
        "color": "primary.800",
        "border": "1px solid primary.200"
      }
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "spacing.4"
    },
    "grid": {
      "columns": 12,
      "gap": "spacing.6"
    },
    "flex": {
      "gap": "spacing.4"
    }
  },

  "zIndex": {
    "dropdown": 1000,
    "sticky": 1020,
    "fixed": 1030,
    "modal": 1040,
    "popover": 1050,
    "tooltip": 1060,
    "toast": 1070
  },

  "principles": {
    "accessibility": {
      "contrastRatio": "4.5:1",
      "focusIndicators": true,
      "semanticMarkup": true,
      "keyboardNavigation": true
    },
    "responsive": {
      "mobileFirst": true,
      "fluidTypography": true,
      "flexibleGrids": true
    },
    "performance": {
      "lightweight": true,
      "optimizedAssets": true,
      "minimalJavaScript": true
    }
  }
}


